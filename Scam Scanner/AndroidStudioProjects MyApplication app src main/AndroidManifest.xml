    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Custom Call UI Activity for blacklisted numbers -->
        <activity
            android:name=".CallActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />
        
        <!-- Default Call UI Activity for non-blacklisted numbers -->
        <activity
            android:name=".DefaultCallActivity"
            android:exported="false"
            android:theme="@style/Theme.MyApplication"
            android:launchMode="singleTop"
            android:excludeFromRecents="true" />
        
        <!-- ConnectionService to handle call connections -->
        <service
            android:name=".MyConnectionService"
            android:permission="android.permission.BIND_TELECOM_CONNECTION_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.ConnectionService" />
            </intent-filter>
        </service>
        
        <!-- InCallService to manage call UI -->
        <service
            android:name=".MyInCallService"
            android:permission="android.permission.BIND_INCALL_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.telecom.InCallService" />
            </intent-filter>
        </service>

    </application>

</manifest>